{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@alexaegis/ts/base",
	"references": [{ "path": "./tsconfig.vitest-spec.json" }],
	"compilerOptions": {
		"types": ["node", "vite/client", "svelte"],
		"rootDir": "../..",
		"moduleResolution": "node",
		"outDir": "./dist/out-tsc"
	},
	"include": ["**/*.d.ts", "**/*.ts", "**/*.js", "**/*.svelte"],
	"exclude": ["node_modules", "dist", "coverage", "**/*.spec.ts"]
}
