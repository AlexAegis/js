{
	"configurations": [
		{
			"name": "Current TS File",
			"type": "node",
			"request": "launch",
			"env": {
				"TS_NODE_PROJECT": "./tsconfig.json",
				"TS_NODE_TRANSPILE_ONLY": "true",
				"TS_NODE_FILES": "true"
			},
			"args": ["${relativeFile}"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register",
				"--max-old-space-size=8192"
			],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
