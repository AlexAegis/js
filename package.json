{
	"name": "@alexaegis/workspace",
	"displayName": "js",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.0.1",
	"license": "mit",
	"author": {
		"name": "Alex Aegis",
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/js",
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/js/issues"
	},
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"keywords": [
		"turbo",
		"eslint",
		"tsconfig",
		"ts",
		"typescript",
		"js",
		"javascript"
	],
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=16.10.0"
	},
	"scripts": {
		"build": "turbo run build",
		"start": "turbo run start --parallel",
		"test": "turbo run test",
		"lint": "turbo run lint --parallel",
		"lint:es": "turbo run lint:es --parallel",
		"lint:svelte": "turbo run lint:svelte --parallel",
		"lint:style": "turbo run lint:style --parallel",
		"lint:md": "turbo run lint:md --parallel",
		"lint:rmd": "turbo run lint:rmd --parallel",
		"lint:format": "turbo run lint:format --parallel",
		"postinstall": "turbo run build",
		"_root#lint:format": "prettier --check .",
		"ncu": "ncu --deep --peer --upgrade",
		"format": "prettier --write .",
		"nuke": "nuke"
	},
	"dependencies": {
		"turbo": "^1.6.3",
		"@alexaegis/editorconfig": "link:packages/editorconfig",
		"@alexaegis/eslint-config-core": "link:packages/eslint-config-core",
		"@alexaegis/eslint-config-svelte": "link:packages/eslint-config-svelte",
		"@alexaegis/git": "link:packages/git",
		"@alexaegis/husky": "link:packages/husky",
		"@alexaegis/nuke": "link:packages/nuke",
		"@alexaegis/prettier": "link:packages/prettier",
		"@alexaegis/stylelint": "link:packages/stylelint",
		"@alexaegis/tools": "link:packages/tools",
		"@alexaegis/tsconfig": "link:packages/tsconfig",
		"@alexaegis/turbo": "link:packages/turbo",
		"@alexaegis/vitest": "link:packages/vitest"
	},
	"devDependencies": {
		"@alexaegis/vite": "link:packages/vite"
	}
}
