{
	"name": "@alexaegis/workspace",
	"displayName": "js",
	"description": "base repo for common stuff in my other js projects",
	"version": "0.0.1",
	"license": "mit",
	"author": {
		"name": "Alex Aegis",
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis"
	},
	"homepage": "https://github.com/AlexAegis/js",
	"bugs": {
		"email": "alexaegis@gmail.com",
		"url": "https://github.com/AlexAegis/js/issues"
	},
	"type": "module",
	"private": true,
	"workspaces": [
		"apps/*",
		"libs/*",
		"packages/*"
	],
	"keywords": [
		"turbo",
		"eslint",
		"tsconfig",
		"ts",
		"typescript",
		"js",
		"javascript"
	],
	"config": {
		"engine-strict": true
	},
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"packageManager": "npm@8.19.2",
	"scripts": {
		"build": "turbo run build",
		"start": "turbo run start --parallel",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"lint:es": "turbo run lint:es",
		"lint:svelte": "turbo run lint:svelte",
		"lint:style": "turbo run lint:style",
		"lint:md": "turbo run lint:md",
		"lint:rmd": "turbo run lint:rmd",
		"lint:format": "turbo run lint:format",
		"postinstall": "turbo run prebuild",
		"_root#lint:format": "prettier --check .",
		"ncu": "ncu --deep --peer --upgrade",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"nuke": "rimraf node_modules **/node_modules .turbo **/.turbo dist **/dist coverage **/coverage package-lock.json"
	},
	"dependencies": {
		"@alexaegis/editorconfig": "*",
		"@alexaegis/eslint-config-core": "*",
		"@alexaegis/eslint-config-svelte": "*",
		"@alexaegis/git": "*",
		"@alexaegis/husky": "*",
		"@alexaegis/nuke": "*",
		"@alexaegis/prettier": "*",
		"@alexaegis/stylelint": "*",
		"@alexaegis/tsconfig": "*",
		"@alexaegis/turbo": "*",
		"@alexaegis/tools": "*",
		"@alexaegis/vitest": "*"
	},
	"devDependencies": {
		"@alexaegis/vite": "*"
	},
	"peerDependencies": {}
}
